<?xml version="1.0" encoding="UTF-8"?>

<Configuration>
    <Appenders>
        <Console name="stdout" follow="true">
            <PatternLayout>
                <pattern>%-5level %logger{0} - %msg%n</pattern>
            </PatternLayout>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="ALL">
            <AppenderRef ref="stdout"/>
        </Root>
    </Loggers>
</Configuration>
